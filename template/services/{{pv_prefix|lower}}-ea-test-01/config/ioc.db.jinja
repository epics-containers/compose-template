record(calc, "{{ pv_prefix }}:SUM") {
  field(DESC, "Sum A and B")
  field(CALC, "A+B")
  field(INPA, "{{ pv_prefix }}:A")
  field(INPB, "{{ pv_prefix }}:B")
}


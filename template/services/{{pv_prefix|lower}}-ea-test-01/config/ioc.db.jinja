    field(DESC, "A voltage")
    field(PREC, "3")
    field(EGU,  "Volts")
    field(DRVL, "-10")
    field(DRVH, "+10")
    field(VAL,  "0.000")
    field(FLNK, "{{ pv_prefix }}:SUM")
}

